<div cclass="container col-12 justify-content-center">
    <div class=" col-6 m-5 border mx-auto text-center">
    <h1 class="mb-3">First game!</h1>
        <div class="col-12 d-flex">
            <% @letters.each do |letter|  %>
                <div class="d-flex justify-content-center mx-auto">
                   <p class="border p-4"> <%= letter %> </p>
                </div>
            <% end %>
        </div>

        <form action="/score" method="post" data-turbo="false">
            <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
            <label for="letters">
            <input type="text" class="m-2 p-1" name="letters"> 
            <%= link_to "Play!", "/score" %>
        </form>
    </div>
</div>